<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/txt_view_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_background"
        android:text="T"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="33sp"
        />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="Name"
        android:layout_toRightOf="@+id/txt_view_avatar"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:04 AM"
        android:layout_alignParentRight="true"
        android:layout_above="@id/txt_content"
        android:textSize="23sp"
        android:padding="3dp"
        />
    <TextView
        android:id="@+id/txt_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_toRightOf="@+id/txt_view_avatar"
        android:text="Content Content Content Content Content Content"
        android:textSize="19sp"
        android:padding="3dp"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <ImageView
        android:id="@+id/txt_image"
        android:src="@drawable/ic_star_normal"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_below="@id/txt_time"
        android:layout_toRightOf="@id/txt_content"
        android:padding="4dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>